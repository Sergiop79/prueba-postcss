{
  "name": "prueba-postcss",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prebuild": "mkdir -p public && mkdir -p public/css",
    "build": "npm run build:css && npm run copy:html && echo \"Build OK\"",
    "build:css": "postcss -u autoprefixer -u lost -u postcss-import -u cssnano -c options.json -o public/css/style.css src/css/style.css",
    "copy:html": "cp src/index.html public/",
    "watch": "rerun-script",
    "serve": "browser-sync start --server \"public\" --files \"public/**/*\"",
    "dev": "npm run build && npm run watch & npm run serve"
  },
  "author": "",
  "license": "ISC",
  "watches": {
    "build:css": "src/css/**/*.css",
    "copy:html": "src/*.html"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "browser-sync": "^2.12.3",
    "cssnano": "^3.5.2",
    "lost": "^6.7.2",
    "normalize.css": "^4.1.1",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.1.0",
    "rerun-script": "^0.6.0"
  }
}
